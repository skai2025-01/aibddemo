        const allPayments = [
            // Sample historical data
            { customer_id: "DEMOUSER1", transaction_id: "TRANS-001", amount: 15000.00, date: "2024-06-15", status: "Completed" },
            { customer_id: "TESTAGENT", transaction_id: "TRANS-002", amount: 75000.50, date: "2024-06-20", status: "Completed" },
            { customer_id: "DEMOUSER1", transaction_id: "TRANS-003", amount: 2200.75, date: "2024-06-25", status: "Completed" }
        ];
        let currentTransactionId = ''; // To link payments to a unique transaction

        // --- Utility Functions ---
        function usdToPhp(amountUsd) {
            return amountUsd * EXCHANGE_RATE_USD_PHP;
        }

        function formatCurrency(amount) {
            return `PHP ${amount.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ',')}`;
        }

        function generateTransactionId() {
            const timestamp = new Date().getTime();
            return `TRANS-${timestamp.toString().slice(-6)}`; // Simple unique ID for demo
        }

        function displayMessage(message, type, targetElementId = 'paymentMessage') {
            const messageBox = document.getElementById(targetElementId);
            messageBox.classList.remove('hidden', 'message-success', 'message-error', 'message-info');
            messageBox.classList.add(`message-${type}`);
            messageBox.innerText = message;
        }

        function setPaymentButtonsState(disabled) {
            const payButtons = document.querySelectorAll('.payment-button');
            payButtons.forEach(button => button.disabled = disabled);
        }

        // --- Section Visibility Control ---
        function showSection(sectionId) {
            document.getElementById('authSection').classList.add('hidden');
            document.getElementById('mainAppSection').classList.add('hidden');
            document.getElementById('navbar').classList.add('hidden');
            document.getElementById('accountModal').classList.add('hidden'); // Ensure modal is hidden
            document.getElementById('paymentConfirmationSection').classList.add('hidden'); // Hide new section

            if (sectionId === 'authSection') {
                document.getElementById('authSection').classList.remove('hidden');
            } else if (sectionId === 'mainApp') {
                if (currentUser) {
                    document.getElementById('mainAppSection').classList.remove('hidden');
                    document.getElementById('navbar').classList.remove('hidden');
                    resetForm(); // Reset calculator when navigating back to it
                } else {
                    displayMessage('Please login first to access the calculator.', 'error', 'authMessage');
                    document.getElementById('authSection').classList.remove('hidden');
                }
            }
        }

        // --- Authentication Functions ---
        function login() {
            const customerId = document.getElementById('loginCustomerId').value.trim().toUpperCase();
            const password = document.getElementById('loginPassword').value;

            if (!customerId || !password) {
                displayMessage('Please enter both Customer ID and Password.', 'error', 'authMessage');
                return;
            }

            if (registeredCustomers[customerId] && registeredCustomers[customerId].password === password) {
                currentUser = { id: customerId, ...registeredCustomers[customerId] };
                displayMessage(`Welcome, ${currentUser.company_name}!`, 'success', 'authMessage');
                setTimeout(() => showSection('mainApp'), 1000);
            } else {
                displayMessage(`Invalid Customer ID or Password.`, 'error', 'authMessage');
            }
        }

        function register() {
            const customerId = document.getElementById('registerCustomerId').value.trim().toUpperCase();
            const companyName = document.getElementById('registerCompanyName').value.trim();
            const password = document.getElementById('registerPassword').value;
            const customerType = document.getElementById('registerCustomerType').value;

            if (!customerId || !companyName || !password || !customerType) {
                displayMessage('All registration fields are required.', 'error', 'authMessage');
                return;
            }
            if (registeredCustomers[customerId]) {
                displayMessage(`Customer ID '${customerId}' already exists. Please choose another.`, 'error', 'authMessage');
                return;
            }

            registeredCustomers[customerId] = { company_name: companyName, customer_type: customerType, password: password };
            currentUser = { id: customerId, ...registeredCustomers[customerId] };
            displayMessage(`Registration successful! Welcome, ${currentUser.company_name}!`, 'success', 'authMessage');
            // Clear registration fields
            document.getElementById('registerCustomerId').value = '';
            document.getElementById('registerCompanyName').value = '';
            document.getElementById('registerPassword').value = '';
            document.getElementById('registerCustomerType').value = '';
            setTimeout(() => showSection('mainApp'), 1000);
        }

        function logout() {
            currentUser = null;
            displayMessage('You have been logged out.', 'info', 'authMessage');
            document.getElementById('loginCustomerId').value = ''; // Clear login field
            document.getElementById('loginPassword').value = ''; // Clear password field
            showSection('authSection');
        }

        // --- Account Modal Functions ---
        function openAccountModal() {
            if (!currentUser) {
                displayMessage('Please login to view your account.', 'error', 'authMessage');
                showSection('authSection');
                return;
            }

            document.getElementById('accountCustomerId').innerText = currentUser.id;
            document.getElementById('accountCompanyName').innerText = currentUser.company_name;
            document.getElementById('accountCustomerType').innerText = currentUser.customer_type;

            const paymentHistoryBody = document.getElementById('paymentHistoryBody');
            paymentHistoryBody.innerHTML = ''; // Clear previous history

            const userPayments = allPayments.filter(p => p.customer_id === currentUser.id);

            if (userPayments.length === 0) {
                paymentHistoryBody.innerHTML = `<tr><td colspan="4" class="text-center py-6 text-gray-500">No payment history found for this account.</td></tr>`;
            } else {
                userPayments.forEach(payment => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td class="px-3 py-2.5 whitespace-nowrap">${payment.transaction_id}</td>
                        <td class="px-3 py-2.5 whitespace-nowrap">${formatCurrency(payment.amount)}</td>
                        <td class="px-3 py-2.5 whitespace-nowrap">${payment.date}</td>
                        <td class="px-3 py-2.5 whitespace-nowrap">${payment.status}</td>
                    `;
                    paymentHistoryBody.appendChild(row);
                });
            }
            document.getElementById('accountModal').classList.remove('hidden');
        }

        function closeAccountModal() {
            document.getElementById('accountModal').classList.add('hidden');
        }

        // --- Fee Calculation Logic ---
        function calculateFees() {
            if (!currentUser) {
                displayMessage('Please login first to calculate fees.', 'error', 'applicationMessage');
                showSection('authSection');
                return;
            }

            // Disable buttons during processing
            setPaymentButtonsState(true);
            const calculateFeesBtn = document.getElementById('feeCalculationInputsSection').querySelector('button');
            if (calculateFeesBtn) {
                calculateFeesBtn.disabled = true; // Disable calculate fees button
            }
            document.getElementById('applicationMessage').classList.add('hidden'); // Clear previous message
            document.getElementById('paymentMessage').classList.add('hidden');     // Clear previous payment message

            displayMessage('Calculating fees... Please wait.', 'info', 'applicationMessage');

            // Simulate fee calculation
            setTimeout(() => {
                currentTransactionId = generateTransactionId(); // Generate a transaction ID for the payment

                const permitType = document.getElementById('permitType').value;
                const grt = parseFloat(document.getElementById('grt').value) || 0;
                const days = parseFloat(document.getElementById('days').value) || 0;
                const lineMoves = parseFloat(document.getElementById('lineMoves').value) || 0;
                const containerCount = parseFloat(document.getElementById('containerCount').value) || 0;
                const cargoStorageDays = parseFloat(document.getElementById('cargoStorageDays').value) || 0;

                let totalFeesPhp = 0;
                const feeDetails = [];

                // --- Vessel Charges ---
                if (permitType === "Vessel Entry" || permitType === "Tug Service") {
                    const harborFeeUsd = grt * TARIFF["International Foreign"].harborFee;
                    feeDetails.push({
                        type: "Harbor Fee",
                        description: `${grt} GRT @ $${TARIFF["International Foreign"].harborFee.toFixed(4)}/GRT`,
                        amount: usdToPhp(harborFeeUsd)
                    });
                    totalFeesPhp += usdToPhp(harborFeeUsd);

                    const berthingFeeUsd = grt * TARIFF["International Foreign"].berthingFee * days;
                    feeDetails.push({
                        type: "Berthing Fee",
                        description: `${grt} GRT for ${days} days @ $${TARIFF["International Foreign"].berthingFee.toFixed(4)}/GRT/day`,
                        amount: usdToPhp(berthingFeeUsd)
                    });
                    totalFeesPhp += usdToPhp(berthingFeeUsd);

                    let harborCleaningRateUsd = 0;
                    for (const range of TARIFF["International Foreign"].harborCleaning) {
                        if ((range.grtMax && grt <= range.grtMax) || (range.grtMin && grt >= range.grtMin)) {
                            harborCleaningRateUsd = range.rate;
                            break;
                        }
                    }
                    const harborCleaningFeeUsd = harborCleaningRateUsd * days;
                    feeDetails.push({
                        type: "Harbor Cleaning Fee",
                        description: `Vessel ${grt} GRT for ${days} days @ $${harborCleaningRateUsd.toFixed(2)}/day`,
                        amount: usdToPhp(harborCleaningFeeUsd)
                    });
                    totalFeesPhp += usdToPhp(harborCleaningFeeUsd);

                    if (lineMoves > 0) {
                        const lineHandlingFeeUsd = lineMoves * TARIFF["International Foreign"].lineHandling;
                        feeDetails.push({
                            type: "Line Handling",
                            description: `${lineMoves} moves @ $${TARIFF["International Foreign"].lineHandling.toFixed(2)}/move`,
                            amount: usdToPhp(lineHandlingFeeUsd)
                        });
                        totalFeesPhp += usdToPhp(lineHandlingFeeUsd);
                    }
                }

                // --- Cargo Charges (Foreign Import 20ft FCL) ---
                if (containerCount > 0 && (permitType === "Cargo Import" || permitType === "Cargo Export" || permitType === "Cargo Transshipment")) {
                    const cargoTariff = TARIFF["CargoForeignFCL20ft"];

                    const processingFeePhp = cargoTariff.processingFee * containerCount;
                    feeDetails.push({
                        type: "Cargo Processing Fee",
                        description: `${containerCount} containers @ PHP ${cargoTariff.processingFee.toFixed(2)}/container`,
                        amount: processingFeePhp
                    });
                    totalFeesPhp += processingFeePhp;

                    const wharfageFeePhp = cargoTariff.wharfageFee * containerCount;
                    feeDetails.push({
                        type: "Cargo Wharfage Fee (20ft FCL)",
                        description: `${containerCount} containers @ PHP ${cargoTariff.wharfageFee.toFixed(2)}/container`,
                        amount: wharfageFeePhp
                    });
                    totalFeesPhp += wharfageFeePhp;

                    if (cargoStorageDays > 0) {
                        const storageFeeUsd = cargoTariff.storageFee * containerCount * cargoStorageDays;
                        feeDetails.push({
                            type: "Cargo Storage Fee (20ft FCL)",
                            description: `${containerCount} containers for ${cargoStorageDays} days @ $${cargoTariff.storageFee.toFixed(2)}/container/day`,
                            amount: usdToPhp(storageFeeUsd)
                        });
                        totalFeesPhp += usdToPhp(storageFeeUsd);
                    }
                }


                // Update UI with calculated fees
                const feeDetailsBody = document.getElementById('feeDetailsBody');
                if (feeDetailsBody) {
                    feeDetailsBody.innerHTML = ''; // Clear previous details
                }


                if (feeDetails.length === 0) {
                    if (feeDetailsBody) {
                        feeDetailsBody.innerHTML = `<tr><td colspan="3" class="text-center py-6 text-gray-500">No fees calculated. Please check inputs.</td></tr>`;
                    }
                    const feeTotalFooter = document.getElementById('feeTotalFooter');
                    if (feeTotalFooter) {
                        feeTotalFooter.classList.add('hidden');
                    }
                    setPaymentButtonsState(true); // Keep payment buttons disabled if no fees
                    displayMessage(`No fees calculated. Please adjust inputs.`, 'error', 'applicationMessage');
                } else {
                    feeDetails.forEach(fee => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td class="px-2 py-2 whitespace-nowrap">${fee.type}</td>
                            <td class="px-2 py-2">${fee.description}</td>
                            <td class="px-2 py-2 whitespace-nowrap text-right">${formatCurrency(fee.amount)}</td>
                        `;
                        if (feeDetailsBody) {
                            feeDetailsBody.appendChild(row);
                        }
                    });
                    const totalAmountElement = document.getElementById('totalAmount');
                    if (totalAmountElement) {
                        totalAmountElement.innerText = formatCurrency(totalFeesPhp);
                    }
                    const feeTotalFooter = document.getElementById('feeTotalFooter');
                    if (feeTotalFooter) {
                        feeTotalFooter.classList.remove('hidden');
                    }
                    setPaymentButtonsState(false); // Enable payment buttons if fees are calculated
                    displayMessage(`Fees calculated. Ready for payment.`, 'success', 'applicationMessage');

                    // Scroll to fee summary section
                    const feeSummarySection = document.getElementById('feeSummarySection');
                    if (feeSummarySection) {
                        feeSummarySection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                }
                if (calculateFeesBtn) {
                    calculateFeesBtn.disabled = false; // Re-enable calculate fees button
                }
            }, 2000); // Simulate network delay for calculation
        }

        function initiatePayment(method) {
            const totalAmountText = document.getElementById('totalAmount').innerText;
            const totalAmountValue = parseFloat(totalAmountText.replace('PHP ', '').replace(/,/g, ''));

            if (totalAmountValue === 0 || document.getElementById('feeTotalFooter').classList.contains('hidden')) {
                displayMessage('Please calculate fees first.', 'error');
                return;
            }
            if (!currentUser) {
                displayMessage('Please login first to make a payment.', 'error', 'authMessage');
                showSection('authSection');
                return;
            }
            if (!currentTransactionId) {
                displayMessage('No fees calculated for payment. Please calculate fees first.', 'error');
                return;
            }

            setPaymentButtonsState(true); // Disable buttons during processing
            document.getElementById('applicationMessage').classList.add('hidden'); // Clear application message
            document.getElementById('paymentMessage').classList.add('hidden');     // Clear payment message

            displayMessage(`Processing payment for Transaction ID ${currentTransactionId} via ${method}... Please wait.`, 'info');

            // Simulate API call to payment gateway
            setTimeout(() => {
                const success = Math.random() > 0.1; // 90% chance of success

                if (success) {
                    displayMessage(`Payment of ${totalAmountText} via ${method} successful!`, 'success');
                    // Record the payment
                    allPayments.push({
                        customer_id: currentUser.id,
                        transaction_id: currentTransactionId,
                        amount: totalAmountValue,
                        date: new Date().toISOString().slice(0, 10), //YYYY-MM-DD
                        status: "Completed"
                    });

                    // Transition to payment confirmation page
                    const completedTransactionIdElement = document.getElementById('completedTransactionId');
                    if (completedTransactionIdElement) {
                        completedTransactionIdElement.innerText = currentTransactionId;
                    }
                    document.getElementById('paymentConfirmationSection').classList.remove('hidden');
                    document.getElementById('mainAppSection').classList.add('hidden'); // Hide main app section
                    document.getElementById('navbar').classList.remove('hidden'); // Keep navbar visible

                } else {
                    displayMessage(`Payment via ${method} failed for Transaction ID ${currentTransactionId}. Please try again or choose another method.`, 'error');
                    setPaymentButtonsState(false); // Re-enable buttons on failure
                }
            }, 2000); // Simulate network delay
        }

        function resetForm() {
            // Reset input values for fee calculation
            const permitType = document.getElementById('permitType');
            if (permitType) permitType.value = "Vessel Entry";
            
            const vesselName = document.getElementById('vesselName');
            if (vesselName) vesselName.value = "";
            
            const grt = document.getElementById('grt');
            if (grt) grt.value = "10000";
            
            const days = document.getElementById('days');
            if (days) days.value = "3";
            
            const lineMoves = document.getElementById('lineMoves');
            if (lineMoves) lineMoves.value = "2";
            
            const containerCount = document.getElementById('containerCount');
            if (containerCount) containerCount.value = "5";
            
            const cargoStorageDays = document.getElementById('cargoStorageDays');
            if (cargoStorageDays) cargoStorageDays.value = "7";

            // Clear fee summary display
            const feeDetailsBody = document.getElementById('feeDetailsBody');
            if (feeDetailsBody) {
                feeDetailsBody.innerHTML = `<tr><td colspan="3" class="text-center py-6 text-gray-500">Enter details and click "Calculate Fees" to see the summary.</td></tr>`;
            }
            const feeTotalFooter = document.getElementById('feeTotalFooter');
            if (feeTotalFooter) {
                feeTotalFooter.classList.add('hidden');
            }
            const totalAmount = document.getElementById('totalAmount');
            if (totalAmount) {
                totalAmount.innerText = "PHP 0.00";
            }

            // Clear messages and hide specific sections
            const applicationMessage = document.getElementById('applicationMessage');
            if (applicationMessage) {
                applicationMessage.classList.add('hidden');
                applicationMessage.innerHTML = '';
            }
            const paymentMessage = document.getElementById('paymentMessage');
            if (paymentMessage) {
                paymentMessage.classList.add('hidden');
                paymentMessage.innerHTML = '';
            }
            
            currentTransactionId = ''; // Clear current transaction ID

            // Ensure correct section visibility
            document.getElementById('mainAppSection').classList.remove('hidden'); // Show main app section
            document.getElementById('paymentConfirmationSection').classList.add('hidden'); // Hide confirmation page

            // Re-enable buttons for a new calculation
            const calculateFeesBtn = document.getElementById('feeCalculationInputsSection')?.querySelector('button');
            if (calculateFeesBtn) {
                calculateFeesBtn.disabled = false; // Re-enable calculate fees button
            }
            setPaymentButtonsState(true); // Payment buttons should be disabled until fees are calculated again
        }

        // Initial state: show authentication section
        window.onload = () => showSection('authSection');
    </script>
</body>
</html>
